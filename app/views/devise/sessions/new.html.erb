<div class='col-lg-6 oddset-lg-4 offset-1 space'>
  <div class="row">
    <h3>
      <span style="display: inline-block;">会員の方は</span>
      <span style="display: inline-block">こちらからログイン</span>
    </h3>
  </div>

<div class="row">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row space">
    <div class='col-lg-4'>
      <h5><%=f.label :Eメール %></h5>
    </div>
    <div class='col-lg-8'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>

<div class="form-group row">
  <div class="col-lg-4">
    <h5><%= f.label :パスワード %></h5>
  </div>
  <div class="col-lg-8">
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
</div>

<div>
  <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
</div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>

<div class="space">
  <h4>登録がお済みでない方</h4>
  <h5><%= link_to "こちら", new_user_registration_path %>
  から新規登録してください。</h5>
</div>
</div>

<%= render "devise/shared/links" %>
