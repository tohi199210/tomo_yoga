<div class='col-lg-6 offset-2 space'>
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class='form-group row space'>
  <div class='col-lg-4'>
    <h5><%= f.label :名前 %></h5>
  </div>
  <div class='col-lg-8'>
    <div class="row">
      <div class="col-lg-6">
        (姓)<%= f.text_field :first_name, autofocus: true,
        autocomplete: 'first_name' %>
      </div>
      <div class='col-lg-6'>
        (名)<%= f.text_field :last_name, autofocus: true,
        autocomplete: 'last_name' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class='col-lg-4'>
    <h5><%= f.label :フリガナ %></h5>
  </div>
  <div class='col-lg-8'>
    <div class="row">
      <div class="col-lg-6">
        (セイ)<%= f.text_field :first_name_kana, autofocus: true,
        autocomplete: 'first_name_kana' %>
      </div>
      <div class="col-lg-6">
        (メイ)<%= f.text_field :last_name_kana, autofocus: true,
        autocomplete: 'last_name_kana' %>
      </div>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class='col-lg-4'>
    <h5><%= f.label :Eメール %></h5>
  </div>
  <div class='col-lg-8'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>

<div class="form-group row">
  <div class='col-lg-4'>
    <h5><%= f.label :パスワード（6文字以上） %></h5>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
  <div class='col-lg-8'>
    <%= f.password_field :password, autocomplete: "new-paassword" %>
  </div>
</div>


<div class="form-group row">
  <div class="col-lg-4">
  <h5><%= f.label :パスワード確認用 %></h5>
  </div>
  <div class='col-lg-8'>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-2 offset-lg-5 actions">
    <%= f.submit "新規登録", class:'btn btn-danger' %>
  </div>
</div>
<% end %>
</div>
</div>

<div class="space">
  <h4>すでに登録済みの方へ</h4>
  <h5><%= link_to 'こちら', new_user_session_path %>からログインしてください</h5>
</div>



<%= render "devise/shared/links" %>
</div>
