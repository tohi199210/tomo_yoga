<div class="container">
	<%= form_for(@user) do |f| %>
	<div class="row">
		<div class="col-lg-4">
			<%= attachment_image_tag @user, :image, :fill, 60, 60, class:"img-circle pull-left profile-thumb", fallback: "no_image.jpg",size:'100x100' %>
		</div>
		<div class="col-lg-8">
			(姓)<%= f.text_field :first_name, placeholder:"姓" %>
			(名前)<%= f.text_field :last_name, placeholder:"名" %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<%= f.text_area :introduction, placeholder:"自己紹介文", class:"user-edit-form" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-lg-4 offset-lg-8">
			<%= f.submit "データを更新",class: "btn btn-primary" %>
			<%= link_to "退会する" ,user_withdrawal_path(@user), class:'btn btn-danger' %>
		</div>
	</div>
	
<% end %>
</div>


